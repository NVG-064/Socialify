<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="32dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/tertiary_color">

        <ImageView
            android:id="@+id/recommendationProfilePictureImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/recommendationTitleTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/recommendationProfilePictureImageView"
            android:layout_marginStart="16dp"
            android:text="Title"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/recommendationMembersTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommendationTitleTextView"
            android:layout_toEndOf="@id/recommendationProfilePictureImageView"
            android:layout_marginStart="16dp"
            android:text="Members"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:maxLines="1" />

        <TextView
            android:id="@+id/recommendationRatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommendationMembersTextView"
            android:layout_toEndOf="@id/recommendationProfilePictureImageView"
            android:layout_marginStart="16dp"
            android:text="Rating"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:maxLines="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/secondary_color"
            android:text="@string/join"
            android:textColor="@color/primary_color" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>