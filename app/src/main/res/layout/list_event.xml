<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/live_sekarang"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bg_live"/>

        <ImageView
            android:id="@+id/img_profil_user"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/profil_user"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/tv_nama_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reza Kecap"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom|left"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/tv_topik_diskusi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngobrol santai sambil ngoding"
            android:textColor="@color/white"
            android:textSize="7dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>