<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentDeskripsiKomunitas"
    android:background="@color/primary_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/clicked_community"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardBackgroundColor="@color/another_color"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_komunitas"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/nama_komunitas"
                android:layout_margin="15dp" />

            <TextView
                android:id="@+id/nama_komunitas"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Programmer Forum"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_komunitas"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="50dp"/>
            <TextView
                android:id="@+id/jumlah_anggota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7300 anggota"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/nama_komunitas"
                app:layout_constraintStart_toEndOf="@+id/img_komunitas"/>
            <ImageView
                android:id="@+id/img_rating_komunitas"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/rating_komunitas"
                app:layout_constraintTop_toBottomOf="@id/jumlah_anggota"
                app:layout_constraintStart_toEndOf="@id/img_komunitas"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/tv_rating_komunitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/jumlah_anggota"
                app:layout_constraintStart_toEndOf="@id/img_rating_komunitas"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/btn_more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/baseline_more_horiz_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tentang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/clicked_community"
        android:layout_margin="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>