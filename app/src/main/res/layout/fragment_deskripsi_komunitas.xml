<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".FragmentDeskripsiKomunitas">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/communityInfoAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:id="@+id/communityInfoBackButtonToolbarImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_outline_arrow_back_24" />

            <TextView
                android:id="@+id/communityInfoLabelToolbarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/secondary_color"
                android:textSize="20sp"
                android:text="@string/title_community_information" />

            <ImageView
                android:id="@+id/communityInfoSettingsButtonImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_gear_64" />

        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/communityInfoAppBarLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/clicked_community"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:cardBackgroundColor="@color/another_color"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_komunitas"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/nama_komunitas"
                        android:layout_margin="15dp" />

                    <TextView
                        android:id="@+id/nama_komunitas"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Programmer Forum"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_komunitas"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="50dp"/>

                    <TextView
                        android:id="@+id/jumlah_anggota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7300 anggota"
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="18dp"
                        app:layout_constraintTop_toBottomOf="@id/nama_komunitas"
                        app:layout_constraintStart_toEndOf="@+id/img_komunitas"/>

                    <ImageView
                        android:id="@+id/img_rating_komunitas"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/rating_komunitas"
                        app:layout_constraintTop_toBottomOf="@id/jumlah_anggota"
                        app:layout_constraintStart_toEndOf="@id/img_komunitas"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/tv_rating_komunitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.6"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        app:layout_constraintTop_toBottomOf="@id/jumlah_anggota"
                        app:layout_constraintStart_toEndOf="@id/img_rating_komunitas"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:id="@+id/btn_more"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_more_horiz_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="15dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/heading_tentang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/clicked_community"
                android:text="Tentang"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_color"
                android:layout_margin="15dp" />
            <TextView
                android:id="@+id/tv_tentang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading_tentang"
                android:text="Programmer Forum adalah tempat perkumpulan para programmer veteran maupun pemula untuk saling berbagi ilmu dan info seputar teknologi."
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/heading_riwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tentang"
                android:text="Riwayat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/secondary_color"
                android:layout_margin="15dp"/>

            <TextView
                android:id="@+id/tv_riwayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading_riwayat"
                android:text="Komunitas ini berdiri sejak 7 april 2020. Didirikan oleh 3 orang moderator di Jakarta"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/heading_Lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_riwayat"
                android:text="Lokasi"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/secondary_color"
                android:layout_margin="15dp"/>

            <TextView
                android:id="@+id/tv_lokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading_Lokasi"
                android:text="Komunitas ini berlokasi di Jakarta, Indonesia"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/heading_aturan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_lokasi"
                android:text="Aturan"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/secondary_color"
                android:layout_margin="15dp"/>

            <TextView
                android:id="@+id/tv_aturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading_aturan"
                android:text="1. Dilarang SARA\n2. Postingan harus berkaitan dengan teknologi\n3. Tidak boleh berkata kotor/melanggar kata kunci\n4. Dilarang memposting konten berbau seksual dan kekerasan\n5. Postingan/topik yang pernah diposting sebelumnya akan ditolak"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>