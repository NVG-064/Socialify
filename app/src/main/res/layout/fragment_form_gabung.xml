<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".FormGabungFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/joinFormAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:id="@+id/joinFormBackButtonToolbarImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_outline_arrow_back_24" />

            <TextView
                android:id="@+id/joinFormLabelToolbarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/secondary_color"
                android:textSize="20sp"
                android:text="@string/title_community_join_request" />

            <ImageView
                android:id="@+id/joinFormSettingsButtonImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_gear_64" />

        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/joinFormAppBarLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/heading_pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Pertanyaan"
                android:textColor="@color/secondary_color"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/questionOneDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading_pertanyaan"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:textColor="@color/white"
                android:text="@string/question_1_desc" />

            <EditText
                android:id="@+id/questionOneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/questionOneDescriptionTextView"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/squircle_shape"
                android:minLines="3"
                android:lines="6"
                android:maxLines="8"
                android:inputType="textMultiLine"
                android:hint="@string/type_your_answer"
                android:gravity="top|start"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/questionTwoDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/questionOneEditText"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:textColor="@color/white"
                android:text="@string/question_2_desc" />

            <EditText
                android:id="@+id/questionTwoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/questionTwoDescriptionTextView"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/squircle_shape"
                android:minLines="3"
                android:lines="6"
                android:maxLines="8"
                android:inputType="textMultiLine"
                android:hint="@string/type_your_answer"
                android:gravity="top|start"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/kirim_jawaban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/questionTwoEditText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="24dp"
                android:text="Kirim Jawaban"
                android:textColor="@color/primary_color"
                android:backgroundTint="@color/secondary_color" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>