<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FormGabungFragment"
    android:background="@color/primary_color">

    <TextView
        android:id="@+id/heading_pertanyaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pertanyaan"
        android:textColor="@color/secondary_color"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/soal_jawaban_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/heading_pertanyaan"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/kirim_jawaban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim Jawaban"
        android:textColor="@color/primary_color"
        android:backgroundTint="@color/secondary_color"
        app:layout_constraintTop_toBottomOf="@id/soal_jawaban_form"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>