<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="32dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tertiary_color">

        <ImageView
            android:id="@+id/imagePositionLeaderboardImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/profilePictureLeaderboardImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagePositionLeaderboardImageView"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/titleLeaderboardTextView"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/template_community_title"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/profilePictureLeaderboardImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totalMemberLeaderboardTextView"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="@string/template_community_members"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/profilePictureLeaderboardImageView"
            app:layout_constraintTop_toBottomOf="@+id/titleLeaderboardTextView" />

        <TextView
            android:id="@+id/ratingLeaderboardTextView"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="@string/template_community_rating"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/profilePictureLeaderboardImageView"
            app:layout_constraintTop_toBottomOf="@+id/totalMemberLeaderboardTextView" />

        <TextView
            android:id="@+id/categoryLeaderboardTextView"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:text="@string/template_community_category"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/profilePictureLeaderboardImageView"
            app:layout_constraintTop_toBottomOf="@+id/ratingLeaderboardTextView"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>