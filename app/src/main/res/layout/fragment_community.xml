<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/communityPostAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:id="@+id/communityPostBackButtonToolbarImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_outline_arrow_back_24" />

            <LinearLayout
                android:id="@+id/communityPostLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/communityPostProfilePictureCircleImageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/profile_picture_1"/>

                <TextView
                    android:id="@+id/communityPostLabelToolbarTextView"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/secondary_color"
                    android:textSize="20sp"
                    android:text="@string/example_community_title_1"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <ImageView
                android:id="@+id/communityPostSettingsButtonImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_gear_64" />

        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/discussionForumTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/communityPostAppBarLayout"
        android:background="@drawable/bg_discussion_forum_shape"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="24dp"
        android:textColor="@color/primary_color"
        android:textSize="20sp"
        android:text="@string/title_discussion_forum"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/discussionForumTitleTextView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/createPostLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_profil_user"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/profil_user"
                    android:layout_margin="15dp"/>

                <EditText
                    android:id="@+id/et_buat_diskusi"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="Buat Diskusi"
                    android:textStyle="italic"
                    android:layout_margin="12dp" />

                <ImageView
                    android:id="@+id/img_tambah_gambar"
                    android:layout_width="43dp"
                    android:layout_height="39dp"
                    android:src="@drawable/tambah_gambar"
                    android:layout_margin="15dp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/createPostLinearLayout"
                android:layout_marginTop="10dp"
                android:background="@color/primary_color">

                <ImageView
                    android:id="@+id/sortByHomeImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/sort_by" />

                <TextView
                    android:id="@+id/tv_urut_berdasarkan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="45dp"
                    android:text="Urut Berdasarkan"
                    android:textColor="@color/white" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frameLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="72dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Tidak ada postingan" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>