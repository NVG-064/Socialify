<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".MenuKomunitasFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/communityMenuAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:id="@+id/communityMenuBackButtonToolbarImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_outline_arrow_back_24" />

            <TextView
                android:id="@+id/communityMenuLabelToolbarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/secondary_color"
                android:textSize="20sp"
                android:text="@string/title_community_menu" />

            <ImageView
                android:id="@+id/communityMenuSettingsButtonImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_gear_64" />

        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/communityMenuAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/clicked_community"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@id/communityMenuAppBarLayout"
                app:cardBackgroundColor="@color/another_color"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_komunitas"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/nama_komunitas"
                        android:layout_margin="15dp" />

                    <TextView
                        android:id="@+id/nama_komunitas"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Programmer Forum"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_komunitas"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="50dp"/>
                    <TextView
                        android:id="@+id/jumlah_anggota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7300 anggota"
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="18dp"
                        app:layout_constraintTop_toBottomOf="@id/nama_komunitas"
                        app:layout_constraintStart_toEndOf="@+id/img_komunitas"/>
                    <ImageView
                        android:id="@+id/img_rating_komunitas"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/rating_komunitas"
                        app:layout_constraintTop_toBottomOf="@id/jumlah_anggota"
                        app:layout_constraintStart_toEndOf="@id/img_komunitas"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:id="@+id/tv_rating_komunitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.6"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        app:layout_constraintTop_toBottomOf="@id/jumlah_anggota"
                        app:layout_constraintStart_toEndOf="@id/img_rating_komunitas"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:id="@+id/btn_more"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_more_horiz_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="15dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_deskripsi_komunitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/clicked_community"
                android:fontFamily="@font/poppins_medium"
                android:textSize="15sp"
                android:text="@string/title_community_information"
                android:textAlignment="viewStart"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="45dp"
                android:backgroundTint="@color/tertiary_color"
                android:drawableEnd="@drawable/ic_community_desc_16" />

            <Button
                android:id="@+id/btn_anggota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_deskripsi_komunitas"
                android:fontFamily="@font/poppins_medium"
                android:textSize="15sp"
                android:text="@string/title_community_members"
                android:textAlignment="viewStart"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/tertiary_color"
                android:drawableEnd="@drawable/ic_community_members_16" />

            <Button
                android:id="@+id/btn_moderator_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_anggota"
                android:fontFamily="@font/poppins_medium"
                android:textSize="15sp"
                android:text="@string/title_community_admin_moderator"
                android:textAlignment="viewStart"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/tertiary_color"
                android:drawableEnd="@drawable/ic_community_admods_16" />

            <Button
                android:id="@+id/btn_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_moderator_admin"
                android:fontFamily="@font/poppins_medium"
                android:textSize="15sp"
                android:text="@string/title_community_events"
                android:textAlignment="viewStart"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/tertiary_color"
                android:drawableEnd="@drawable/ic_community_events_16" />

            <Button
                android:id="@+id/btn_review_komunitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_event"
                android:fontFamily="@font/poppins_medium"
                android:textSize="15sp"
                android:text="@string/title_community_reviews"
                android:textAlignment="viewStart"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/tertiary_color"
                android:drawableEnd="@drawable/ic_community_reviews_16" />

            <Button
                android:id="@+id/btn_keluar_komunitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_review_komunitas"
                android:fontFamily="@font/poppins_medium"
                android:textSize="15sp"
                android:text="@string/title_community_exit"
                android:textAlignment="viewStart"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="72dp"
                android:backgroundTint="@color/red"
                android:drawableEnd="@drawable/ic_community_exit_16" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>