<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ReviewKomunitasFragment"
    android:background="@color/primary_color">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/communityReviewAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:id="@+id/communityReviewBackButtonToolbarImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_outline_arrow_back_24" />

            <TextView
                android:id="@+id/communityReviewLabelToolbarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/secondary_color"
                android:textSize="20sp"
                android:text="@string/title_community_reviews" />

            <ImageView
                android:id="@+id/communityReviewSettingsButtonImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_gear_64" />

        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rating_bintang"
        android:layout_width="match_parent"
        android:layout_below="@id/communityReviewAppBarLayout"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_pertanyaan_satu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bagaimana performa komunitas pada bulan ini?"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="24dp"/>

        <RadioGroup
            android:id="@+id/ratingKomunitasRadioGroup"
            android:src="@drawable/star"
            app:layout_constraintTop_toBottomOf="@id/tv_pertanyaan_satu"
            android:layout_marginTop="10dp"
            android:background="@drawable/squircle_shape"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/communityRating1RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community_review_stars_1" />

            <RadioButton
                android:id="@+id/communityRating2RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/community_review_stars_2" />

            <RadioButton
                android:id="@+id/communityRating3RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/community_review_stars_3" />

            <RadioButton
                android:id="@+id/communityRating4RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/community_review_stars_4" />

            <RadioButton
                android:id="@+id/communityRating5RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/community_review_stars_5" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rating_alasan_disukai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rating_bintang">

        <TextView
            android:id="@+id/tv_pertanyaan_tiga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mengapa kamu memilih opsi tersebut?"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"/>

        <EditText
            android:id="@+id/et_alasan_disukai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/squircle_shape"
            android:minLines="3"
            android:lines="6"
            android:maxLines="8"
            android:inputType="textMultiLine"
            android:hint="@string/type_your_answer"
            android:gravity="top|start"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_pertanyaan_tiga"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_kirim_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim Jawaban"
        android:textColor="@color/primary_color"
        android:backgroundTint="@color/secondary_color"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/rating_alasan_disukai"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>