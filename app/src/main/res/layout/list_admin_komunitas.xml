<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/anggota_komunitas"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="@color/tertiary_color">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_profil_admin"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/profil_user"
            app:layout_constraintTop_toTopOf=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/tv_nama_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farhan Kebab"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@id/img_profil_admin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tv_role_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_admin"
            app:layout_constraintStart_toEndOf="@id/img_profil_admin"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/btn_more_anggota"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_more_horiz_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>